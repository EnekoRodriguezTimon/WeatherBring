<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/row_background"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/TVcityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/locationRowText"
        android:text="City Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="@dimen/location_row_icon_size"
        android:layout_height="@dimen/location_row_icon_size"
        android:layout_marginRight="@dimen/location_row_icon_margin_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bin"
         />


</androidx.constraintlayout.widget.ConstraintLayout>